<Window x:Class="BatchRename.PascalCaseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PascalCase Configuration" Height="180" Width="350">
    <Canvas>

        <TextBlock Text="Seperator" Canvas.Left="21" Canvas.Top="27" RenderTransformOrigin="0.79,-1.429">

        </TextBlock>

        <TextBox TextChanged="TextBox_TextChanged" Name ="TextBox" Canvas.Left="124" Canvas.Top="27" Width="189">
        </TextBox>

        <Button Name="SaveButton" Click="SaveButton_Click" Canvas.Left="68" Canvas.Top="90" Width="75" Height="28" IsEnabled="False" 
            >Save
        </Button>

        <Button Name="CancelButton" Canvas.Left="182" Canvas.Top="90" Width="74" Height="28" IsCancel="True" Click="CancelButton_Click"
            >Cancel
        </Button>
    </Canvas>
</Window>
